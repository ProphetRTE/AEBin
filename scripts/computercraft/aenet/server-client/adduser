-- main.lua
local UserManager = require("lib/aenet-usermanager")
local aeprint = require("lib/aeprint")

-- Start the server
aeprint.print("Enter the servername you want to use:")
local serverName = read() -- Use read() in the interactive prompt, or io.read() in a script
UserManager.startServer(serverName)
aeprint.print("Server started: " .. serverName)

-- Ask for user input
aeprint.print("Enter the username you want to add:")
local username = read() -- Use read() in the interactive prompt, or io.read() in a script

aeprint.print("Enter the password for the user:")
local password = read() -- Use read() in the interactive prompt, or io.read() in a script

-- Add the user with the provided credentials
UserManager.addUser(username, password)
aeprint.print("User added: " .. username)

-- Close the server once we are done with it
UserManager.closeServer()
aeprint.print("Server closed.")